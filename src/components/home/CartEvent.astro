---
const { year, image, titleEvent, titlePublication, slug } = Astro.props

const isImage =
  image ?? 'https://images6.alphacoders.com/105/thumb-1920-1050408.jpg'
---

<article
  data-filter-years={year}
  class='bg-theme-decoration/10 group relative overflow-hidden'
>
  <section class='h-72'>
    <a href=''>
      <img
        src={isImage}
        alt={titleEvent}
        class='h-full w-full object-cover select-none'
      />
    </a>
  </section>

  <section class='p-4'>
    <h3
      class='text-theme-title line-clamp-2 text-base font-semibold uppercase sm:text-lg md:text-xl mb-2'
    >
      {titleEvent}
    </h3>

    <a
      href={'publications/' + slug}
      class='hover:text-theme-decoration text-sm'
    >
      {titlePublication}
    </a>
  </section>
</article>
