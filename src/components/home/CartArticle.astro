---
import Articles from '@assets/icons/article.svg'
import Arrow from '@assets/icons/arrow.svg'
import Calendar from '@assets/icons/calendar.svg'

const { title, author, date, description, link, image_author } = Astro.props
---

<article
  class='border-[1px] rounded-sm border-theme-decoration p-3 flex flex-col gap-3 h-72'
>
  <div class='flex gap-1 sm:gap-4 items-center'>
    <Articles
      class='min-w-[40px] min-h-[40px] sm:min-w-[50px] sm:min-h-[50px]'
    />

    <a href={link}>
      <h3
        class='text-theme-title line-clamp-2 uppercase font-semibold text-base sm:text-lg md:text-xl'
      >
        {title}
      </h3>
    </a>
  </div>

  <div class='flex gap-2 items-center flex-wrap text-theme-text'>
    <div
      class='flex items-center border-[1px] border-theme-decoration gap-2 text-[10px] sm:text-xs bg-theme-decoration/10 w-max px-4 py-1 rounded-sm'
    >
      <div class='size-3 sm:size-4 bg-theme-decoration/5'>
        <img
          src={image_author}
          alt={author}
          class='w-full h-full object-cover'
        />
      </div>
      <span>{author}</span>
    </div>
    <div
      class='flex items-center border-[1px] border-theme-decoration gap-2 text-[10px] sm:text-xs bg-theme-decoration/10 w-max px-4 py-1 rounded-sm'
    >
      <Calendar />
      <span>{date}</span>
    </div>
  </div>

  <div
    class='flex-1 font-light text-xs [&>*]:mb-2 text-theme-text h-full overflow-y-auto text-ellipsis'
  >
    {description}
  </div>

  <a href={link} class='text-xs text-theme-text flex gap-1 items-center w-max'>
    Continuar leyendo <Arrow />
  </a>
</article>
