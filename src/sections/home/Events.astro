---
import CartEvent from '@components/home/CartEvent.astro'
import Container from '@share_components/Container.astro'

import Arrow from '@assets/icons/arrow.svg'

import Evento1 from '@assets/events/evento1.jpg'
import Evento2 from '@assets/events/evento2.jpg'

const EVENTS = [
  {
    title: 'Semillero Pixel 2025',
    image: Evento1.src,
  },
  {
    title: 'Semillero Pixel 2024',
    image: Evento2.src,
  },
  {
    title: 'Semillero Pixel 2023',
    image: Evento1.src,
  },
]
---

<Container styles='py-10 grid gap-5'>
  <h2
    class='text-theme-title text-2xl sm:text-4xl font-bold uppercase mb-2 text-center'
  >
    Eventos
  </h2>

  <div class='grid gap-10'>
    <section class='grid place-content-center gap-4 flex-wrap'>
      <!-- <form>
        <select name='type'>
          <option value='for-years'>Por años</option>
          <option value='time-line'>Linea de tiempo</option>
        </select>
      </form> -->
      <div class='flex flex-wrap gap-4 text-theme-text'>
        <button
          class='text-sm bg-theme-decoration/10 py-1 px-4 border-1 border-theme-decoration cursor-pointer'
        >
          Todos
        </button>
        <button
          class='text-sm py-1 px-4 border-1 border-theme-decoration cursor-pointer'
        >
          2025
        </button>
        <button
          class='text-sm py-1 px-4 border-1 border-theme-decoration cursor-pointer'
        >
          2024
        </button>
        <button
          class='text-sm py-1 px-4 border-1 border-theme-decoration cursor-pointer'
        >
          2023
        </button>
        <a
          href='#'
          class='text-sm py-1 px-4 border-1 border-theme-decoration cursor-pointer flex gap-2 items-center'
        >
          Ver más
          <Arrow />
        </a>
      </div>
    </section>

    <section class='grid grid-cols-1 gap-5 md:grid-cols-2'>
      {
        EVENTS.map(({ title, image }) => (
          <CartEvent title={title} image={image} />
        ))
      }
    </section>
  </div>
</Container>
