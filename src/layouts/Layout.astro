---
import '../styles/global.css'

import Header from '@share_components/Header.astro'
import Footer from '@share_components/Footer.astro'
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/icons/logo.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>Semillero Pixel</title>
  </head>
  <body class='bg-theme-background'>
    <Header />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
