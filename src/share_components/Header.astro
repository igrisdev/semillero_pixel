---
const { pathname } = Astro.url

import Facebook from '@assets/icons/facebook.svg'

import Container from '@share_components/Container.astro'
import Split from '@share_components/Split.astro'

const SOCIALS_MEDIA = [
  {
    name: 'Instagram',
    icon: '',
  },
  {
    name: 'Facebook',
    icon: Facebook,
  },
  {
    name: 'X',
  },
]

const LINKS = [
  {
    name: 'Inicio',
    link: '/',
  },
  {
    name: 'Proyectos',
    link: '#',
  },
  {
    name: 'Art√≠culos',
    link: '#',
  },
  {
    name: 'Publicaciones',
    link: '#',
  },
  {
    name: 'Eventos',
    link: '#',
  },
  {
    name: 'Sobre Nosotros',
    link: '#',
